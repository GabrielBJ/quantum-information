@article{Zoufal2023a,
  title = {Variational Quantum Algorithm for Unconstrained Black Box Binary Optimization: {{Application}} to Feature Selection},
  shorttitle = {Variational Quantum Algorithm for Unconstrained Black Box Binary Optimization},
  author = {Zoufal, Christa and Mishmash, Ryan V. and Sharma, Nitin and Kumar, Niraj and Sheshadri, Aashish and Deshmukh, Amol and Ibrahim, Noelle and Gacon, Julien and Woerner, Stefan},
  year = {2023},
