@article{Zoufal2019,
  title = {Quantum {{Generative Adversarial Networks}} for Learning and Loading Random Distributions},
  author = {Zoufal, Christa and Lucchi, Aur{\'e}lien and Woerner, Stefan},
  year = {2019},
